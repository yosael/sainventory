<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE resources PUBLIC "-//Sun Microsystems, Inc.//DTD Application Server 9.0 Resource Definitions //EN"
    "http://www.sun.com/software/appserver/dtds/sun-resources_1_3.dtd">
<resources>
    <jdbc-connection-pool
        name="kubekitPool"
        datasource-classname="org.postgresql.jdbc3.Jdbc3ConnectionPool"
        res-type="javax.sql.DataSource">
        <property name="database" value="jdbc:postgresql://localhost:5432/kubekit"/> <!-- HSQLDB uses database instead of url -->
        <property name="url" value="jdbc:postgresql://localhost:5432/kubekit"/>
        <property name="user" value="postgres"/>
        <property name="password" value="jokalive"/> <!-- Use the value "()" for an empty password -->
    </jdbc-connection-pool>
    <jdbc-resource
        jndi-name="kubekitDatasource"
        pool-name="kubekitPool"
        enabled="true"
        object-type="user"/>
</resources>
